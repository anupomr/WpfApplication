<Window x:Class="WpfDataBindingControl.WinCoding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDataBindingControl"
        mc:Ignorable="d"
        Title="WinCoding" Height="300" Width="300">
    

        <StackPanel>
        <TextBlock TextWrapping="Wrap"
                   Text="The Target (textBox) is updated via code and source (slider) is updated via code"/>
        <Slider Minimum="0" Maximum="100" x:Name="sldSource" ValueChanged="sldSource_ValueChanged"/>
        <TextBox x:Name="txtTarget" TextChanged="txtTarget_TextChanged"/>

    </StackPanel>
</Window>
